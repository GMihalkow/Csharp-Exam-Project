@using Forum.ViewModels.Quote;
@model QuoteInputModel;

<div id="shoutbox" class="menu-bg-forum text-center">
    <h1 class="m-0"><a id="main-heading-text" href="#">Reply to: @this.ViewData["ReplierName"]</a></h1>
    <h2 class="m-0"><a id="main-heading-text" href="#">Post: @this.ViewData["PostName"]</a></h2>
</div>
<div class="post-form mt-5">
    <div class="text-white menu-bg-forum border-5 p-10 text-start two-thirds-width mx-auto">
        <h5 class="m-0">Pesho said:</h5>
        <blockquote>
            <i>"@Model.Quote"</i>
        </blockquote>
    </div>
    <div class="container two-thirds-width mx-5-auto">
        <form class="my-form" asp-controller="Quote" asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" hidden="hidden" name="forumId" />
            <div class="text-center">
                <div class="block">
                    <div>
                        <label class="text-forum bold">Reply</label>
                    </div>
                    <button title="italic" type="button" value="[i][/i]" class="text">italic</button>
                    <button title="bold text" type="button" value="[b][/b]" class="text">bold</button>
                    <button title="center text" type="button" value="[center][/center]" class="text">center</button>
                    <button title="heading 1" type="button" value="[h1][/h1]" class="text">heading 1</button>
                    <button title="heading 2" type="button" value="[h2][/h2]" class="text">heading 2</button>
                    <button title="heading 3" type="button" value="[h3][/h3]" class="text">heading 3</button>
                    <button title="horizontal line" type="button" value="[hr][/hr]" class="text">horizontal line</button>
                    <button title="ordered list" type="button" value="[ol][li][/li][/ol]" class="text"><i class="fas fa-list-ol"></i></button>
                    <button title="unordered list" type="button" value="[ul][li][/li][/ul]" class="text"><i class="fas fa-list-ul"></i></button>
                    <button title="list item" type="button" value="[li][/li]" class="text">list item</button>
                    <textarea asp-for="Description" class="full-width post-textarea" rows="12" cols="10"></textarea>
                    <div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <button type="button" class="emote">😀</button>
                <button type="button" class="emote">😃</button>
                <button type="button" class="emote">😄</button>
                <button type="button" class="emote">😆</button>
                <button type="button" class="emote">🤣</button>
                <button type="button" class="emote">🙂</button>
                <button type="button" class="emote">😉</button>
                <button type="button" class="emote">😊</button>
                <button type="button" class="emote">😇</button>
                <button type="button" class="emote">😍</button>
                <button type="button" class="emote">😘</button>
                <button type="button" class="emote">😋</button>
                <button type="button" class="emote">😛</button>
                <button type="button" class="emote">🤑</button>
                <button type="button" class="emote">🤔</button>
                <button type="button" class="emote">😐</button>
                <button type="button" class="emote">😶</button>
                <button type="button" class="emote">😬</button>
                <button type="button" class="emote">😴</button>
                <button type="button" class="emote">🤒</button>
                <button type="button" class="emote">😎</button>
                <button type="button" class="emote">🙁</button>
                <button type="button" class="emote">😮</button>
                <button type="button" class="emote">😲</button>
                <button type="button" class="emote">😥</button>
                <button type="button" class="emote">😭	</button>
                <button type="button" class="emote">😓</button>
                <button type="button" class="emote">😡</button>
                <button type="button" class="emote">😈</button>
                <button type="button" class="emote">💩</button>
                <button type="button" class="emote">❤</button>

            </div>
            <div class="center-button">
                <input onclick="window.history.back()" class="mt-25 submit-button menu-bg-forum" type="button" value="Cancel">
                <input class="mt-25 submit-button menu-bg-forum" type="submit" value="Quote">
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}